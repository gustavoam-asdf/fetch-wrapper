{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"incremental": false,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "NodeNext",
		"moduleDetection": "force",
		"moduleResolution": "NodeNext",
		"noUncheckedIndexedAccess": true,
		"strict": true,
		"target": "ES2022"
	},
	"exclude": [
		"lib/*",
		"dist/*"
	]
}